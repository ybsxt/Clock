<Window x:Class="Clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clock"
        mc:Ignorable="d"
        Title="Clock" Height="200" Width="300"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStyle="None" KeyUp="OnKeyUp" Closing="OnClosing">
    <Grid>
        <TextBlock x:Name="Time" TextWrapping="NoWrap" TextAlignment="Center" Margin="80,60,80,100" FontSize="30">HH:mm:ss</TextBlock>
        <TextBlock x:Name="Date" TextWrapping="NoWrap" TextAlignment="Center" Margin="80,125,80,60" FontSize="12">yyyy年MM月dd日 星期x</TextBlock>
    </Grid>



</Window>
